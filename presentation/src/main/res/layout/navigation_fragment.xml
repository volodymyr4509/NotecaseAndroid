<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/navigate_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/navigation_button"
        android:src="@mipmap/ic_chevron_left_white_36dp" />

    <RadioGroup
        android:id="@+id/date_filter_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:checkedButton="@+id/last_24_hours"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/last_24_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="24hours" />

        <RadioButton
            android:id="@+id/last_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/radioGroup"
            android:layout_toRightOf="@+id/radioGroup"
            android:text="Week" />

        <RadioButton
            android:id="@+id/last_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/week"
            android:layout_toRightOf="@+id/week"
            android:text="Month" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/navigate_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/navigation_button"
        android:src="@mipmap/ic_chevron_right_white_36dp" />

</RelativeLayout>
