<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You need to sign in"
        android:id="@+id/login_or_exit"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/delimiter2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/delimiter2"
        android:layout_below="@+id/delimiter2"
        android:background="@color/common_plus_signin_btn_text_light_focused" />

    <TextView
        android:id="@+id/result_client_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sign_in_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sign_in_button"
        android:layout_below="@+id/sign_in_button"
        android:text="No user"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>